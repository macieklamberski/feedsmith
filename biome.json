{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "formatter": {
    "useEditorconfig": true,
    "formatWithErrors": true,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "quoteStyle": "single"
    }
  },
  "linter": {
    "rules": {
      "style": {
        "noParameterAssign": "warn",
        "useConsistentArrayType": {
          "level": "error",
          "options": {
            "syntax": "generic"
          }
        }
      },
      "complexity": {
        "useArrowFunction": "error"
      }
    }
  }
}
