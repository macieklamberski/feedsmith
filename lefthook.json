{
  "$schema": "https://json.schemastore.org/lefthook.json",
  "pre-commit": {
    "parallel": true,
    "commands": {
      "typescript": {
        "glob": "*.{ts,tsx}",
        "run": "npm run lint:tsc && npm run lint:biome {staged_files}",
        "stage_fixed": true
      },
      "javascript": {
        "glob": "*.{js,jsx}",
        "run": "npm run lint:biome {staged_files}",
        "stage_fixed": true
      },
      "yaml": {
        "glob": "*.{yml,yaml}",
        "run": "npm run lint:biome {staged_files}",
        "stage_fixed": true
      },
      "json": {
        "glob": "*.json",
        "run": "npm run lint:biome {staged_files}",
        "stage_fixed": true
      }
    }
  },
  "pre-push": {
    "parallel": true,
    "commands": {
      "test": {
        "run": "bun test"
      }
    }
  }
}
